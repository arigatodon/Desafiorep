<h1>Listing Proyects</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>User</th>
      <th>tareas pendientes</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proyects.each do |proyect| %>
      <tr>
        <td><%= link_to proyect.name, proyect %></td>
        <td><%= proyect.user.to_s %></td>
      
        <td><%= proyect.tasks.to_do.count %></td>
        
        <td><%= link_to 'Show', proyect %></td>
        <td><%= link_to 'Edit', edit_proyect_path(proyect) %></td>
        <td><%= link_to 'Destroy', proyect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

